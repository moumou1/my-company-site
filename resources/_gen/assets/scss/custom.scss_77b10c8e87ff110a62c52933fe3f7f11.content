@charset "UTF-8";.navbar{background-color:#fff}footer{background-color:#343a40;color:#f8f9fa}.card:hover{transform:translateY(-5px);transition:transform .3s}.advantage-section{background:#f4f6fa}.advantage-card{background:#fff;border-left:4px solid #0d6efd;padding:20px;border-radius:10px;box-shadow:0 2px 8px rgba(0,0,0,5%);transition:.25s ease}.advantage-card:hover{transform:translateY(-4px);box-shadow:0 4px 16px rgba(0,0,0,.12)}.advantage-card h5{color:#0d6efd;font-weight:700;margin-bottom:8px}.advantage-card p{color:#555;margin:0}.advantage-box{border-left:6px solid #0a4c9c;transition:all .3s ease}.advantage-box:hover{background-color:#f2f6fb;transform:translateY(-4px)}.carousel-caption h5{font-size:2rem;font-weight:600}.carousel-caption p{font-size:1.1rem}.page-hero{width:100%;height:90vh;max-height:900px;min-height:520px;background-size:cover;background-position:50%;position:relative}@media(max-width:768px){.page-hero{height:60vh;min-height:360px}}